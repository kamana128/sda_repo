; CDO Codes
cdo griddes cru_ts4.04.1901.2019.pre.dat.nc > gridfile.txt

ingrid="gridfile.txt"
outgrid="target.txt"

infile="cru_ts4.04.1901.2019.pre.dat.nc"
outfile="CRU_25km_1901-2019_pre.nc"
 
cdo remapycon,$outgrid -setgrid,$ingrid $infile $outfile
 
 
